- id = dom_id(@group)
- if @group.destroyed?
  jQuery('##{id}').css('background-color', '#ffe4e1').slideUp(250);
- else
  crm.flick("#{dom_id(@group, :confirm)}, 'remove')");
  jQuery('##{id}').effect("shake", { duration:250, distance: 6 });
  jQuery('#flash').html('#{ j flash[:warning] }');
  crm.flash('warning');
  - flash[:warning] = nil
