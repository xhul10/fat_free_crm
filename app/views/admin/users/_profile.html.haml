.section
  %table{ :width => 500, :cellpadding => 0, :cellspacing => 0 }
    %tr
      %td{ :valign => :top }
        .label.top First name:
        = f.text_field :first_name, :style => "width:240px"
      %td= spacer
      %td{ :valign => :top }
        .label.top Last name:
        = f.text_field :last_name, :style => "width:240px"
    %tr
      %td{ :valign => :top }
        .label Title:
        = f.text_field :title, :style => "width:240px"
      %td= spacer
      %td{ :valign => :top }
        .label Company:
        = f.text_field :company, :style => "width:240px"
.subtitle Access Information
.section
  %table{ :width => 500, :cellpadding => 0, :cellspacing => 0 }
    %tr
      %td{ :valign => :top }
        .label.req Username:
        = f.text_field :username, :style => "width:240px"
      %td= spacer
      %td{ :valign => :top }
        .label.req Email:
        = f.text_field :email, :style => "width:240px"
