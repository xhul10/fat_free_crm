- id = dom_id(@user)

- if @user.destroyed?
  jQuery('##{id}').css('background-color', '#ffe4e1').slideUp(250).remove();
- else
  crm.flick('#{dom_id(@user, :confirm)}', 'remove');
  jQuery('##{id}').effect('shake', { duration:250, distance: 6 });
  jQuery('#flash').html('#{j flash[:warning]}');
  crm.flash('warning');
  - flash[:warning] = nil
