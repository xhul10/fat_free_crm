%li[field]{ highlightable(dom_id(field, :tools)) }
  %span.handle
    %img src="/images/sortable.gif"
  .tools{ invisible, :id => dom_id(field, :tools) }
    %small
      = link_to_edit(field, :url => edit_admin_field_path(field)) + " | "
      = link_to_delete(field, :url => admin_field_path(field))
  %tt
    %b
      = field.field_label
    - if field_type = field.form_field_types[field.form_field_type]
      = "(#{field_type[:name]})"

    == added #{time_ago_in_words(field.created_at)} ago
    = hook(:field_bottom, self, :field => field)

