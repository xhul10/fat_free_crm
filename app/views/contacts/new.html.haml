.form
  - form_for(@contact) do |f|
    = hidden_field_tag "contact[user_id]", @current_user.id
    .title Create Contact
    = f.error_messages
    .section
      %table{ :width => 500, :cellpadding => 0, :cellspacing => 0 }
        %tr
          %td{ :valign => :top }
            .label.top.req First name:
            = f.text_field :first_name, :style => "width:240px"
          %td= spacer
          %td{ :valign => :top }
            .label.top.req Last name:
            = f.text_field :last_name, :style => "width:240px"
        %tr
          %td{ :valign => :top }
            .label Title:
            = f.text_field :title, :style => "width:240px"
          %td= spacer
          %td{ :valign => :top }
            .label Department:
            = text_field_tag :department, "", :style => "width:240px"
        %tr
          %td{ :valign => :top }
            .label Email:
            = f.text_field :email, :style => "width:240px"
          %td= spacer
          %td{ :valign => :top }
            .label Alternative email:
            = f.text_field :alt_email, :style => "width:240px"
        %tr
          %td{ :valign => :top }
            .label Phone:
            = f.text_field :phone, :style => "width:240px"
          %td= spacer
          %td{ :valign => :top }
            .label Mobile:
            = f.text_field :mobile, :style => "width:240px"
        %tr
          %td{ :valign => :top }
            .label Address:
            = f.text_area :address, :style =>"width:240px", :rows => 3
          %td= spacer
          %td{ :valign => :top }
            .label Fax:
            = text_field_tag :fax, "", :style => "width:240px"
            %div{:style => "margin-top:6px"}
              .check_box
                = f.check_box :do_not_call, {}, true
                Do not call
    = render :partial => "permissions",  :locals => { :f => f }
    .buttonbar
      = f.submit "Create Contact"
      or
      = link_to "Cancel", contacts_url
