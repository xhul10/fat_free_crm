= inline :create_contact, new_contact_path
.title#create_contact_title Contacts
.remote#create_contact{ hidden }

.list#contacts
  - unless @contacts.empty?
    = render :partial => "contact", :collection => @contacts
  - else
    %div== You don't have any contacts yet. Feel free to #{link_to_remote("create new contact", :url => new_contact_path)}.


