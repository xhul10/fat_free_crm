%li[campaign]{ highlightable(dom_id(campaign, :tools)) }
  .strip{:class => campaign.status}= Setting.campaign_status[campaign.status.intern]
  %div
    .tools{ hidden, :id => dom_id(campaign, :tools) }
      %small
        = link_to("Edit", campaign_path(campaign)) << " | "
        = link_to_remote("Delete!", :url => campaign_path(campaign), :method => :delete, :before => visual_effect(:highlight, dom_id(campaign), :startcolor => "#afeeee"))
      &nbsp;
    = link_to(campaign.name, campaign)
    = render :partial => "status", :locals => { :campaign => campaign }
    = render :partial => "metrics", :locals => { :campaign => campaign }
