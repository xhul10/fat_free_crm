= form_for(@campaign, :html => one_submit_only(:campaign), :remote => true) do |f|
  = link_to_close new_campaign_path
  = f.hidden_field :user_id

  = f.error_messages :object_name => t('campaign')

  = render :partial => "campaigns/top_section", :locals => { :f => f }
  = render :partial => "campaigns/objectives",  :locals => { :f => f }
  = render :partial => "campaigns/permissions", :locals => { :f => f }
  .buttonbar
    = f.submit t(:create_campaign)
    #{t :or}
    = link_to_cancel new_campaign_path
