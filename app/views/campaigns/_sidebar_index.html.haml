.filters#filters
  = render :partial => "common/search"
  - Setting.invert(:campaign_status).each do |key, value|
    .check_box{:style => "border-bottom: 1px silver dotted;"}
      %div{:style => "float:right;"}
        = @campaign_status_total[value]
      = campaign_status_checbox(value, @campaign_status_total[value]) << " " << t('campaign_checkbox_' + key.snakecase)

  .check_box{:style => "border-bottom: 1px silver dotted;"}
    %div{:style => "float:right;"}
      = @campaign_status_total[:other]
    = campaign_status_checbox("other", @campaign_status_total[:other]) << " " << t(:category_other)

  .check_box
    %div{:style => "float:right;"}
      %b= @campaign_status_total[:all]
    %b #{t:campaigns_total}
