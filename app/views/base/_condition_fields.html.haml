.fields.condition{ "data-object-name" => f.object_name }
  %p
    = link_to_remove_fields t(:advanced_search_remove_condition), f

    = f.attribute_fields do |a|
      = render 'attribute_fields', :f => a

    = f.predicate_select :only => [:cont, :not_cont, :blank, :present, :matches, :does_not_match, :eq, :not_eq, :lt, :gt], :compounds => false

    = f.value_fields do |v|
      = render 'value_fields', :f => v
