if params[:visible] == "false"                          # show
  page["#{@context}_title"].replace_html "Create Lead"
  page[@context].replace_html :partial => "create"
  page << "Effect.toggle('#{@context}', 'blind', { duration: 0.25, afterFinish: function() { $('lead_first_name').focus(); } });"
else                                                    # hide
  page["#{@context}_title"].replace_html "Leads"
  page << "Effect.toggle('#{@context}', 'blind', { duration: 0.25 });"
end