if params[:visible] == "false"                          # show
  page[:create_lead_arrow].replace_html "&#9660;"
  page[:create_lead].replace_html :partial => "create"
  page << "Effect.toggle('create_lead', 'slide', { duration: 0.25, afterFinish: function() { $('lead_first_name').focus(); } });"
  page[:lead].replace_html "Create Lead"
else                                                    # hide
  page[:create_lead_arrow].replace_html "&#9658;"
  page << "Effect.toggle('create_lead', 'slide', { duration: 0.25 });"
  page[:lead].replace_html "Leads"
end