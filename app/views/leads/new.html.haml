.form
  - form_for(@lead) do |f|
    = hidden_field_tag "lead[user_id]", @current_user.id
    .title Create Lead
    = f.error_messages
    .section
      %table{ :width => 500, :cellpadding => 0, :cellspacing => 0 }
        %tr
          %td{ :valign => :top }
            .label First name:
            = f.text_field :first_name, :style => "width:240px"
          %td= spacer
          %td{ :valign => :top }
            .label Last name:
            = f.text_field :last_name, :style => "width:240px"
        %tr
          %td{ :valign => :top }
            .label Assigned to:
            = f.text_field :assigned_to, :style => "width:240px"
          %td= spacer
          %td{ :valign => :top }
            .label Campaign:
            = f.text_field :campaign_id, :style => "width:240px"
    = render :partial => "contact", :locals => { :f => f }
    = render :partial => "extra",   :locals => { :f => f }


