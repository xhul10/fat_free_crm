.form
  - form_for(@lead) do |f|
    = hidden_field_tag "lead[user_id]", @current_user.id
    .title Create Lead
    = f.error_messages
    .section
      %table{ :width => 500, :cellpadding => 0, :cellspacing => 0 }
        %tr
          %td{ :valign => :top }
            .label First name:
            = f.text_field :first_name, :style => "width:240px"
          %td= spacer
          %td{ :valign => :top }
            .label Last name:
            = f.text_field :last_name, :style => "width:240px"
        %tr
          %td{ :valign => :top }
            .label Email:
            = f.text_field :email, :style => "width:240px"
          %td= spacer
          %td{ :valign => :top }
            .label Phone:
            = f.text_field :phone, :style => "width:240px"
    = render :partial => "status",  :locals => { :f => f }
    = render :partial => "contact", :locals => { :f => f }
    = render :partial => "web",     :locals => { :f => f }


