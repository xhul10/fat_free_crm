.remote
  - remote_form_for(@lead) do |f|
    = hidden_field_tag "lead[user_id]", @current_user.id
    = f.error_messages
    = render :partial => "leads/top_section", :locals => { :f => f }
    = render :partial => "leads/status",      :locals => { :f => f }
    = render :partial => "leads/contact",     :locals => { :f => f }
    = render :partial => "leads/web",         :locals => { :f => f }
    = render :partial => "leads/permissions", :locals => { :f => f }
    .buttonbar
      = f.submit "Save Lead"
      or
      = link_to_remote("Cancel", :url => edit_lead_path(@lead), :method => :get, :with => "{ cancel: true }" )
