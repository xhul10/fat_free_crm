- collapsed = (@lead.errors.empty? && session[:permissions_leads_convert].nil?)
= subtitle :permissions, collapsed
.section
  %small#permissions_intro{ hidden_if(!collapsed) }
    Contact permissions will be copied from the lead being converted. You can change contact permissions later.
  #permissions{ hidden_if(collapsed) }
    .radio_box
      = radio_button_tag "lead[access]", "Convert", true, { :onclick => "$('people').hide()" }
      Copy lead permissions
    .radio_box
      = radio_button_tag "lead[access]", "Private", false, :onclick => "$('people').hide()"
      Keep it private, do not share with others
    .radio_box
      = radio_button_tag "lead[access]", "Public",  false, :onclick => "$('people').hide()"
      Share it with everyone
    .radio_box
      = radio_button_tag "lead[access]", "Shared",  false, :onclick => "$('people').show()"
      Share it with the following people
    #people{ hidden_if(@lead.access != "Shared") }
      %div{ :style => "padding: 6px 0px 0px 20px" }
        - for user in @users
          .check_box
            -# Preserve state of the checkboxes if the form gets redrawn on errors.
            = check_box_tag "users[]", user.id, params[:users] && params[:users].include?(user.id.to_s)
            = user.full_name
