= styles_for :lead

= inline :create_lead, new_lead_path
.title#create_lead_title Leads
.remote#create_lead{ hidden }

.list#leads
  - unless @leads.empty?
    = render :partial => "lead", :collection => @leads
  - else
    %div== You don't have any leads yet. Feel free to #{link_to("create new lead", new_lead_path)}.
