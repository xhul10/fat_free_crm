= will_paginate :params => {:action => :index}

.per_page_options
  %span.per_page_label
    = t(controller_name)
    per page:

  - [ 10, 20, 30, 50 ].each do |count|
    - if count == @per_page.to_i
      %em.current= count
    - else
      = link_to count, '#', :onclick => redraw_pagination(count) << 'return false;', :"data-count" => count
