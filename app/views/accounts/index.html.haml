- content_for :styles do
  %style
    \.none { background:pink; }
    \.some { background:palegreen; }

.title_menu= link_to "Create New Account", new_account_path
.title Accounts

.list
  - unless @accounts.empty?
    - for account in @accounts
      :ruby
        amount = (rand(100) + 20) * 10_000;  amount = nil if amount / 10_000 % 2 == 0
        leads = rand(100)
        contacts = rand(100)
        opportunities = rand(10)
      %li{ highlightable(dom_id(account)) }
        - if amount
          .strip.some= number_to_currency(amount, :precision => 0)
        - else
          .strip.none None
        %div
          .tools[account]{ hidden }
            = link_to(image_tag("information.png", :title => "View #{h(account.name)}"), account_path(account))
            = link_to(image_tag("tick_circle.png", :title => "Edit #{h(account.name)}"), edit_account_path(account))
            = link_to(image_tag("cross_circle.png", :title => "Delete #{h(account.name)}"), "#")
          = link_to(account.name, account) << " &ndash; "
          %tt
            = account.location << ", " if account.location
            == added #{time_ago_in_words(account.created_at)} ago by 
            == #{account.user.id == @current_user.id ? "me" : account.user.full_name}
          %dt
            = link_to(account.website, account.website) << " | " if account.website?
            = (account.tall_free_phone || account.phone) << " | " if account.tall_free_phone? || account.phone?
            = pluralize(leads, "lead") << " | "
            = pluralize(contacts, "contact") << " | "
            = pluralize(opportunities, "opportunity")
  - else
    %div== You don't have any accounts set up yet. Feel free to #{link_to("create new account", new_account_path)} now.
