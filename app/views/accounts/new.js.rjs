if params[:visible] == "false"                          # show
  page["#{@context}_title"].replace_html "Create Account"
  page[@context].replace_html :partial => "create"
  page << "Effect.toggle('#{@context}', 'blind', { duration: 0.25, afterFinish: function() { $('account_name').focus(); } });"
else                                                    # hide
  page["#{@context}_title"].replace_html "Account"
  page << "Effect.toggle('#{@context}', 'blind', { duration: 0.25 });"
end