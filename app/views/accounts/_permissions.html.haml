.subtitle= link_to_function "Add Permissions", %/$("permissions_intro").toggle(); $("permissions").toggle()/
.section
  #permissions_intro Only you will have access to the account. You can change permissions later.
  #permissions{ :style => "display: none;" }
    .radio_box
      = radio_button_tag :permissions, "Private", true, :onclick => "$('people').hide()"
      Keep it private, do not share with others
    .radio_box
      = radio_button_tag :permissions, "Public", false, :onclick => "$('people').hide()"
      Share it with everyone
    .radio_box
      = radio_button_tag :permissions, "Shared", false, :onclick => "$('people').show()"
      Share it with the following people
    #people{ :style => "display: none;" }
      %div{ :style => "padding: 6px 0px 0px 20px" }
        - for user in @users
          .check_box
            = check_box_tag :users, user.id, false
            = user.full_name
