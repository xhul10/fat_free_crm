- amount = account.opportunities.sum(:amount)
%li{ highlightable(dom_id(account)) }
  - if amount != 0.0
    .strip.some= number_to_currency(amount, :precision => 0)
  - else
    .strip.none None
  %div
    .tools[account]{ hidden }
      = link_to(image_tag("information.png", :title => "View #{h(account.name)}"), account_path(account))
      = link_to(image_tag("tick_circle.png", :title => "Edit #{h(account.name)}"), edit_account_path(account))
      = link_to(image_tag("cross_circle.png", :title => "Delete #{h(account.name)}"), "#")
    = link_to(account.name, account) << " &ndash; "
    %tt
      = account.location << ", " unless account.location.blank?
      == added #{time_ago_in_words(account.created_at)} ago by 
      == #{account.user.id == @current_user.id ? "me" : account.user.full_name}
    %dt
      = link_to(account.website, account.website) << " | " if account.website?
      = "phone: " << (account.tall_free_phone || account.phone) << " | " if account.tall_free_phone? || account.phone?
      = pluralize(account.contacts.count, "contact") << " | "
      = pluralize(account.opportunities.count, "opportunity")
