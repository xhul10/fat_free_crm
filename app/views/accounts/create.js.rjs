if @account.valid?
  page["#{@context}_title"].replace_html "Accounts"
  page << "Effect.toggle('#{@context}', 'blind', { duration: 0.1 });"
  page.insert_html :top, :accounts, :partial => "account", :collection => [ @account ]
  page[dom_id(@account)].visual_effect :highlight, :duration => 1.5
else
  page[@context].replace_html :partial => "create"
  page[@context].visual_effect :shake, :duration => 0.25, :distance => 6
  page[:account_name].focus
end