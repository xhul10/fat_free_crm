.subtitle= link_to_function "Add Contact Information", %w/$("contact_intro").toggle(); $("contact").toggle()/
.section
  #contact_intro{ hidden_if(!@account.errors.empty?) }
    You can add contact information later.
  #contact{ hidden_if(@account.errors.empty?) }
    %table{ :border => 0, :width => 500, :cellpadding => 0, :cellspacing => 0 }
      %tr
        %td{ :valign => :top }
          .label Website:
          = f.text_field :website, :style => "width:240px"
        %td= spacer
        %td{ :valign => :top }
          .label Phone:
          = f.text_field :phone, :style => "width:240px"
      %tr
        %td{ :valign => :top }
          .label Fax:
          = f.text_field :fax, :style => "width:240px"
        %td= spacer
        %td{ :valign => :top }
          .label Fax:
          = f.text_field :fax, :style => "width:240px"
      %tr
        %td{ :valign => :top }
          .label Billing address:
          = f.text_area :billing_address, :style =>"width:240px", :rows => 4
        %td= spacer
        %td{ :valign => :top }
          .label
            Shipping address:
            = link_to_function "same as billing", %/$("account_shipping_address").value = $("account_billing_address").value/
          = f.text_area :shipping_address, :style =>"width:240px", :rows => 4



