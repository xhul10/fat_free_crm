if params[:visible] == "false"                          # show
  page["#{@context}_arrow"].replace_html "&#9660;"
  page << "Effect.toggle('#{@context}', 'slide', { duration: 0.25, afterFinish: function() { $('task_name').focus(); } });"
else                                                    # hide
  page["#{@context}_arrow"].replace_html "&#9658;"
  page << "Effect.toggle('#{@context}', 'slide', { duration: 0.25 });"
end
