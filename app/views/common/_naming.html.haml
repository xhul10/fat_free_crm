- naming_menu_items = ["before", "after"].inject([]) do | items, naming|
  - items << %Q[{ name: "#{t(naming).titleize}", on_select: function() { #{redraw(:naming, t(naming.downcase))} } }]

:plain
  new crm.Menu({
    trigger   : "naming",
    fade      : 0.5,
    appear    : 0.5,
    menu_items: [ #{naming_menu_items.join(",")} ]
  });
