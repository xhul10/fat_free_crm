- outline_menu_items = ["brief", "long"].inject([]) do | items, outline|
  - items << %Q[{ name: "#{t(outline).titleize}", on_select: function() { #{xredraw(:outline, outline)} } }]

:plain
  new crm.Menu({
    trigger   : "outline",
    fade      : 0.5,
    appear    : 0.5,
    menu_items: [ #{outline_menu_items.join(",")} ]
  });
